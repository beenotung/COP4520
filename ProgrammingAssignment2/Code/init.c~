#include "init.h"
//#include "skiplist.h"

void* thread_structureHandler(void* args);

typedef enum {INSERT, DELETE, FIND, IDLE} tasks;

typedef struct
{
	tasks curTask;
	int inputData;
	char resultFlag;	// 'w' = waiting
	slNode * resultNode;
} pthreadData;

void initializeTheThings()
{
	slInit();
	pthread_t threads[MAXTHREADS];
	pthreadData threadData[MAXTHREADS];
	
	for(int i=0; i<MAXTHREADS; i++)
	{
		threadData[i].curTask = IDLE;
		pthread_create(threads[i], NULL, thread_structureHandler. (void *) threadData[i]);
	}
}
